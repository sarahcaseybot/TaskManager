<% include header %>
<% if (entries.length) { %>
  <form method="post" role="form" id="removeForm">
<table style="border: 1px solid black">
  <th><td>Task</td><td>Date</td><td>Type</td></th>
  <% entries.forEach(function(entry) { %>
    <tr style="border: 1px solid black">
    <td style="border: 1px solid black"><input type="checkbox" name="entry" value="<%= entry.id %>"></td>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="text-muted pull-right">
          <%= entry.published %>
        </div>
        <td style="border: 1px solid black"><%= entry.description %></td>
      </div>
      <div class="panel-body">
        <td style="border: 1px solid black"><%= entry.date %></td>
        <td style="border: 1px solid black"><%= entry.type %></td>

      </div>

    </div>
    </tr>
  <% }) %>
<% } else { %> <a href="/new-entry"></a>
<% } %>
</table>
<input type="submit" value="delete" class="btn btn-primary" formaction="/delete" form="removeForm">
  </form>
